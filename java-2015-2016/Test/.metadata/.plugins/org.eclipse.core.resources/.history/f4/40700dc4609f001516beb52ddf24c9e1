package shapes;

public class Rectangle implements Shape {

	private int side;
	private int base;
	
	
	public int calculateSurface() {
		int surface = side * base;
		return surface;
	}

	
	public int calculatePerimetre() {
		int perimetre = side + base;
		perimetre *=2;
		return perimetre;
	}

	public Rectangle(int side, int base) {
		this.side = side;
		this.base = base;
	}

}
