package shapes;

public class Triangle implements Shape {

	private float sideA;
	private float sideB;
	private float base;
	private float hight;
	
	public float calculateSurface() {
		float surface = base * hight;
		surface /=2;
		return surface;
	}

	
	public float calculatePerimetre() {
		
		return 0;
	}

/**
 * constructor for surface;
 * @param base
 * @param hight
 */
	public Triangle(float base, float hight) {
		super();
		this.base = base;
		this.hight = hight;
	}

}
